      <!-- Starry Night -->
      <div
        class="box1 flex h-[15.625rem] w-[20.4375rem] flex-col justify-end bg-[url('/images/starry-night/thumbnail.jpg')] bg-cover bg-no-repeat pb-8 pl-8 text-[#fff] md:w-[20.25rem] lg:w-[19.375rem]"
      >
        <!-- Painting Name -->
        <div class="w-[15.375rem]">
          <a
            href="/starry-night"
            class="text-2xl font-bold leading-normal hover:cursor-pointer"
            >Starry Night</a
          >
        </div>
        <!-- Painting Artist -->
        <div class="">
          <h3 class="text-sm font-normal leading-normal opacity-[0.7528]">
            Vincent Van Gogh
