    <section
      class="wrapper grid-col-1 md:grid-col-2 mx-6 mb-6 mt-[1.44rem] grid gap-6 gap-x-10 gap-y-[2.56rem] md:mb-10 md:max-xl:mx-10 md:max-xl:mt-[2.56rem] md:max-xl:gap-10 lg:mb-[2.94rem] lg:grid-cols-4 lg:gap-10"
